<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="footer"
            type="com.github.boybeak.adapter.extension.Footer"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/footer_not_none"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/footer_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                />
            <ProgressBar
                android:id="@+id/footer_pb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                style="@style/Widget.AppCompat.ProgressBar"/>
        </FrameLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/footer_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:paddingTop="48dp"
            >
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/footer_none_img"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:srcCompat="@drawable/bg_empty_default"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/footer_none_msg"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:maxLines="5"
                android:ellipsize="end"/>
            <Button
                android:id="@+id/footer_none_action_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </FrameLayout>
</layout>